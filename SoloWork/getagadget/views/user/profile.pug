extends ../layout

block content
  section.user-cont
    h1 Welcome
    p= user.local.name
    
    h2 Orders    
    
    ul.order-header
      li.name
        h5 buyer
      li.items Items
      li.total Total
    
    each order in orders
  
      ul#orders-list
        li.name
          h5=order.name
        li.items
          ul
            each cart in order.items
              li= cart.item.title
        li.total $#{order.cart.totalPrice}

        
    h2 Favorites 
      i.fa.fa-heart(aria-hidden='true')
    ul#Favorites
      if wishlist
        each item in wishlist
          //- li= item
          each fav in item
            li= fav.products.title
              
